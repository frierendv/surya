{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./base.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"types": ["jest", "node"],
		"lib": ["dom", "esnext"],
		"declaration": true,
		"sourceMap": true,
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"strict": true,
		"isolatedModules": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true
	}
}
