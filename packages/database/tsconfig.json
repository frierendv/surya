{
	"extends": "@surya/typescript-config/esm.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": ".",
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2024", "ESNext.Disposable"],
		"importHelpers": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "__tests__"]
}
