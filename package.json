{
	"name": "surya",
	"private": true,
	"scripts": {
		"build:all": "dotenvx run -- turbo run build",
		"build:apps": "dotenvx run -- turbo run build --filter=./apps/**/*",
		"build:pkg": "dotenvx run -- turbo run build --filter=./packages/**/*",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"typecheck": "turbo run typecheck",
		"test": "jest --verbose --runInBand",
		"clean": "turbo run clean --parallel",
		"postclean": "rimraf .turbo"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/frierendv/surya.git"
	},
	"author": "FrierenDv",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/frierendv/surya/issues"
	},
	"homepage": "https://github.com/frierendv/surya#readme",
	"description": "",
	"devDependencies": {
		"@dotenvx/dotenvx": "^1.49.1",
		"@ianvs/prettier-plugin-sort-imports": "^4.7.0",
		"@swc/jest": "^0.2.39",
		"@types/jest": "^30.0.0",
		"eslint-config-turbo": "^2.5.6",
		"eslint-plugin-prettier": "^5.5.4",
		"jest": "^30.1.3",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.4.2",
		"ts-node": "^10.9.2",
		"tsup": "^8.5.0",
		"turbo": "latest",
		"typescript": "5.8.3"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "npm@10.9.2",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
