{
	"name": "surya",
	"author": "FrierenDv",
	"private": true,
	"license": "MIT",
	"description": "",
	"engines": {
		"node": ">=20"
	},
	"version": "1.0.0",
	"scripts": {
		"build": "dotenvx run -- turbo run build",
		"build:pkg": "dotenvx run -- turbo run build --filter=./packages/**/*",
		"clean": "turbo run clean --parallel",
		"dev": "turbo run dev",
		"format": "prettier --write \"**/*.{ts,tsx}\"",
		"lint": "eslint . --max-warnings=0",
		"lint:fix": "eslint . --fix",
		"preformat": "syncpack format",
		"prepare": "husky",
		"test": "jest --verbose --runInBand",
		"typecheck": "turbo run typecheck",
		"deps:check": "syncpack list",
		"deps:fix": "syncpack fix",
		"deps:upgrade": "syncpack update --target latest",
		"deps:upgrade:check": "syncpack update --check --target latest"
	},
	"repository": "frierendv/surya.git",
	"bugs": "https://github.com/frierendv/surya/issues",
	"homepage": "https://github.com/frierendv/surya#readme",
	"devDependencies": {
		"@dotenvx/dotenvx": "^1.50.1",
		"@eslint/eslintrc": "^3.3.1",
		"@ianvs/prettier-plugin-sort-imports": "^4.7.0",
		"@swc/jest": "^0.2.39",
		"@types/jest": "^30.0.0",
		"eslint": "^9.36.0",
		"eslint-config-turbo": "^2.5.6",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"jest": "^30.1.3",
		"jiti": "^2.5.1",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"syncpack": "^14.0.0-alpha.21",
		"ts-jest": "^29.4.4",
		"ts-node": "^10.9.2",
		"tsup": "^8.5.0",
		"tsx": "^4.20.5",
		"turbo": "^2.5.6",
		"typescript": "^5.9.2"
	},
	"packageManager": "npm@10.9.2",
	"workspaces": [
		"surya-rb",
		"packages/**/*"
	]
}
